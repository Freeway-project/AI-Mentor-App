# ── Copy this file to docker/.env and fill in your values ──────────────────

# JWT — use a strong random secret (e.g. openssl rand -hex 32)
JWT_SECRET=change_me_use_a_strong_random_secret
JWT_EXPIRES_IN=7d

# CORS — comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:3000

# Browser-facing API URL (what the user's browser will call)
# Local:      http://localhost:3001
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# LLM providers (optional — leave blank to disable)
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=
GROQ_API_KEY=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
