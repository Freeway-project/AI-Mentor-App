# Server
PORT=3001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mentor-app
MONGODB_DB_NAME=mentor-app

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# LLM
OPENROUTER_API_KEY=your_openrouter_key_here
GROQ_API_KEY=your_groq_key_here
LLM_PROVIDER=openrouter

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Email (Nodemailer) â€” for OTP delivery
# Leave blank in development to use console logging fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=OWLMentors <noreply@owlmentors.com>

# Admin notifications (email sent when a new mentor signs up)
ADMIN_NOTIFICATION_EMAIL=indianshahishere@gmail.com
ADMIN_URL=https://owlmentors.com/admin
